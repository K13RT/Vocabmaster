{
  "name": "vocabulary-learning-app",
  "version": "1.0.0",
  "description": "A comprehensive vocabulary learning web application with flashcards, quizzes, and spaced repetition",
  "main": "main.js",
  "scripts": {
    "server": "node --env-file=server/.env server/index.js",
    "client": "cd client && npm run dev",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "install-all": "npm install && cd client && npm install",
    "test:e2e": "playwright test",
    "start": "electron .",
    "build:client": "cd client && npm run build",
    "dist": "powershell -ExecutionPolicy Bypass -File .\\build-electron.ps1"
  },
  "keywords": [
    "vocabulary",
    "flashcard",
    "learning",
    "english"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "sql.js": "^1.10.0",
    "uuid": "^9.0.1",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@playwright/test": "^1.49.0",
    "concurrently": "^8.2.2",
    "electron": "^28.3.3",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "com.vocabmaster.app",
    "productName": "VocabMaster",
    "directories": {
      "output": "release"
    },
    "win": {
      "target": "nsis"
    },
    "files": [
      "**/*",
      "!client/**/*",
      "!release/**/*",
      "!tests/**/*",
      "!**/*.md",
      "!.git/**/*",
      "!.cursor/**/*"
    ],
    "extraResources": [
      {
        "from": "server/data",
        "to": "data",
        "filter": ["**/*"]
      }
    ]
  }
}
