# Server Configuration
PORT=3000
NODE_ENV=development

# Security (REQUIRED in Production)
# Generate strong random strings for these secrets
JWT_SECRET=your_jwt_secret_key_here
REFRESH_SECRET=your_refresh_token_secret_here

# Token Expiration
ACCESS_TOKEN_TTL=15m
REFRESH_TOKEN_TTL=30d
REFRESH_COOKIE_MAX_AGE_MS=2592000000

# Cookie Security
COOKIE_SECURE=false
COOKIE_SAMESITE=strict

# Database Configuration
# Set to 'true' to use Supabase, 'false' to use local SQLite
USE_SUPABASE=false

# Supabase Configuration (Required if USE_SUPABASE=true)
SUPABASE_URL=your_supabase_url
SUPABASE_KEY=your_supabase_anon_key

# Storage Configuration
# Set to 'true' to use Supabase Storage, 'false' to use local uploads
USE_SUPABASE_STORAGE=false
SUPABASE_STORAGE_BUCKET=audio
